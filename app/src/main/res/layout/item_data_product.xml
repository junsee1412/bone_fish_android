<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40C4FF">

        <ImageView
            android:id="@+id/imageProdData"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_fish_bones_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameProdData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Product"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/imageProdData"
            app:layout_constraintTop_toTopOf="@+id/imageProdData" />

        <TextView
            android:id="@+id/pricProdData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$: 400"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageProdData"
            app:layout_constraintStart_toStartOf="@+id/nameProdData" />

        <TextView
            android:id="@+id/stocProdData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="In Stock: 12"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/pricProdData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameProdData" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
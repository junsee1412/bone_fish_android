<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doan">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fish_bones_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_fish_bones_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doan"
        android:usesCleartextTraffic="true">
        <activity android:name=".intentforUser.PasswordActivity"></activity>
        <activity android:name=".intentforUser.AddBranCateActivity" />
        <activity android:name=".intentforUser.AddProductActivity" />
        <activity android:name=".intentforUser.BillActivity" />
        <activity android:name=".intentforUser.ListDataActivity" />
        <activity
            android:name=".ProductActivity"
            android:noHistory="true" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity"
            android:noHistory="true" />
        <activity
            android:name=".SplashActivity1"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>